#!/bin/bash

# vardef
$sleept = 0.15
$winname = "Dwarf Fortress"
$returnk = "KP_Enter"

# funcdefs
throw() {
  for ((c=1; c <= $2 ; c++))
    do
      xdotool search --name "$winname" key t $2 $returnk
      sleep $sleept
  done
}

throwUsage() {
  echo ""
}

pick() {
  for ((c=1; c <= $2 ; c++))
    do
      xdotool search --name "$winname" key g $3
      sleep $sleept
  done
}

pickUsage() {
}

chat() {
  for ((c=1; c <= $2 ; c++))
    do
      xdotool search --name "$winname" key $returnk
      sleep $sleept
    done
}

chatUsage() {
}

wait() {
  for ((c=1; c <= $2 ; c++))
    do
      xdotool search --name "$winname" key period
      sleep $sleept
    done
}

waitUsage() {
}
